<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/drawer_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:ignore="HardcodedText">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:orientation="horizontal">

            <ImageButton
                android:id="@+id/menu_button"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_alignParentStart="true"
                android:layout_marginStart="15dp"
                android:background="#00FFFFFF"
                android:foreground="?attr/selectableItemBackground"
                android:scaleX="1.3"
                android:scaleY="1.3"
                android:src="@drawable/baseline_menu_24" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_centerHorizontal="true"
                android:gravity="center"
                android:text="Newsfeed"
                android:textSize="20dp" />

            <ImageButton
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_alignParentRight="true"
                android:layout_marginRight="15dp"
                android:background="#00FFFFFF"
                android:foreground="?attr/selectableItemBackground"
                android:scaleType="center"
                android:scaleX=".8"
                android:scaleY=".8"
                android:src="@drawable/baseline_account_circle_24" />
        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/border_set"
            android:orientation="horizontal">

            <TextView
                android:layout_width="50dp"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text="LIVE"
                android:textColor="#F42626"
                android:textSize="12sp"
                android:textStyle="bold" />

            <HorizontalScrollView
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:orientation="horizontal"
                android:scrollbars="none">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="center_vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:paddingLeft="10dp"
                        android:text="U.S. Presidential Election"
                        android:textColor="#424040"
                        android:textSize="12sp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:paddingLeft="3dp"
                        android:text="27m ago"
                        android:textColor="#FF0000"
                        android:textSize="9sp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:paddingLeft="10dp"
                        android:paddingRight="10dp"
                        android:text="Solar Eclipse Totality Crosses 12 US States"
                        android:textColor="#424040"
                        android:textSize="12sp" />
                </LinearLayout>
            </HorizontalScrollView>
        </LinearLayout>

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="#DDD"
                android:orientation="vertical">

                <include
                    android:id="@+id/newscard_1"
                    layout="@layout/newscard_constraint" />

                <include
                    android:id="@+id/newscard_2"
                    layout="@layout/newscard_constraint" />

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/trending_container"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="5dp"></androidx.constraintlayout.widget.ConstraintLayout>

                <include
                    android:id="@+id/newscard_3"
                    layout="@layout/newscard_constraint" />

                <include
                    android:id="@+id/newscard_4"
                    layout="@layout/newscard_constraint" />

                <include
                    android:id="@+id/newscard_5"
                    layout="@layout/newscard_constraint" />

                <include
                    android:id="@+id/newscard_6"
                    layout="@layout/newscard_constraint" />
            </LinearLayout>
        </ScrollView>

    </LinearLayout>

    <com.google.android.material.navigation.NavigationView
        android:id="@+id/nav_view"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_gravity="start" >

    <LinearLayout
       android:layout_width="match_parent"
       android:layout_height="match_parent"
       android:orientation="vertical">
       <CheckBox
           android:id="@+id/checkbox_category"
           android:text="Include category"
           android:layout_width="match_parent"
           android:layout_height="wrap_content">

       </CheckBox>
       <CheckBox
           android:text="Include headline"
           android:id="@+id/checkbox_headline"
           android:layout_width="match_parent"
           android:layout_height="wrap_content">

       </CheckBox>
       <CheckBox
           android:id="@+id/checkbox_snippet"
           android:text="Include snippet"
           android:layout_width="match_parent"
           android:layout_height="wrap_content">

       </CheckBox>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Suggestions layout"/>
       <RadioGroup
           android:layout_width="match_parent"
           android:layout_height="wrap_content">
           <RadioButton
               android:id="@+id/carousel_layout"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:layout_weight="1"
               android:onClick="onRadioButtonClicked"
               android:text="Carousel" />

           <RadioButton
               android:id="@+id/tiling_layout"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:layout_weight="1"
               android:onClick="onRadioButtonClicked"
               android:checked="true"
               android:text="Tiling" />
           <RadioButton
               android:id="@+id/compact_carousel_layout"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:layout_weight="1"
               android:onClick="onRadioButtonClicked"
               android:text="Compact carousel" />
       </RadioGroup>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Last Input"/>
       <EditText
           android:id="@+id/last_input"
           android:layout_width="match_parent"
           android:layout_height="wrap_content"/>
   </LinearLayout>
    </com.google.android.material.navigation.NavigationView>
</androidx.drawerlayout.widget.DrawerLayout>